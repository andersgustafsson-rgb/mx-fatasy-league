# MX Fantasy League - Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///mx_fantasy.db
# For PostgreSQL: postgresql://username:password@localhost:5432/mx_fantasy
# For MySQL: mysql://username:password@localhost:3306/mx_fantasy

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Upload Configuration
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB max file size

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=spliffan78@gmail.com
SENDGRID_FROM_NAME=MX Fantasy League
